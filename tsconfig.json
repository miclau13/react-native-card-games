{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@navigator/*": ["src/navigator/*"],
      "@screens/*": ["src/screens/*"],
    },
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
